@model Noticias.Models.HomeViewModel.IndexViewModel
@{
    ViewData["Title"] = "Início";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @for (int i = 1; i <= Model.Banner.Count(); i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i"></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Banner.jpg" alt="Noticias" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black">
                    Seja bem vindo ao site de noticias.
                </p>
            </div>
        </div>
        @foreach (var item in Model.Banner)
        {
            <div class="item">
                <a href="#">
                <img src="~/images/@item.id-Banner.jfif" alt="@item.Titulo" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p style="color:black">@item.Titulo</p>
                </div>
                </a>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-9">
        <h2>Últimas Notícias</h2>

        @foreach (var item in Model.UltimasNoticias)
        {
            <article>
                <h4>@item.Titulo</h4>
                <p>Pubicado @item.DataPublicacao.Value.ToString("dddd, dd 'de' MMMM 'de' yyyy, 'as' HH:mm"), por @item.Autor</p>
                <p>@Html.Raw(item.Corpo)</p>
            </article>
            <hr />
        }
    </div>
    <div class="col-md-3">
        <h2>Categorias</h2>
        <ul>
            @foreach (var item in Model.Categorias)
            {
                <li><a asp-controller="Home" asp-action="Index" asp-route-filtro="@item.id">@item.Descricao</a></li>
            }
        </ul>
    </div>
</div>
