@model Noticias.Models.CategoriasViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Editar Categoria";
}

<h2>@ViewData["Title"]</h2>

<h4>Informe os dados da Categoria</h4>
<hr />

<form asp-action="Edit" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Descricao" class="col-md-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-info" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Retornar a Categorias</a>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}